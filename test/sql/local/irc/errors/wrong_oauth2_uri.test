# name: test/sql/local/irc/errors/wrong_oauth2_uri.test
# group: [errors]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

statement error
attach '' as my_datalake (
	TYPE ICEBERG,
	AUTHORIZATION_TYPE 'oauth2'
)
----
Invalid Input Error: AUTHORIZATION_TYPE is 'oauth2', yet no 'secret' was provided, and no client_id+client_secret were provided. Please provide one of the listed options or change the 'authorization_type'.

statement error
attach '' as my_datalake (
	TYPE ICEBERG,
	AUTHORIZATION_TYPE 'oauth2',
	CLIENT_ID 'root'
)
----
Invalid Input Error: AUTHORIZATION_TYPE is 'oauth2', yet no 'oauth2_server_uri' was provided, and no 'endpoint' was provided to fall back on. Please provide one or change the 'authorization_type'.

statement error
attach '' as my_datalake (
	TYPE ICEBERG,
	AUTHORIZATION_TYPE 'oauth2',
	CLIENT_ID 'root',
	oauth2_server_uri 'test'
)
----
Invalid Input Error: Missing required parameter 'client_secret' for authorization_type 'oauth2'

statement error
attach '' as my_datalake (
	TYPE ICEBERG,
	AUTHORIZATION_TYPE 'oauth2',
	CLIENT_ID 'root',
	oauth2_server_uri 'test',
	SECRET 'test'
)
----
Invalid Configuration Error: Both 'secret' and the following oauth2 option(s) were given: client_id, oauth2_server_uri. These are mutually exclusive
